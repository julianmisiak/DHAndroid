<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ejerciciosdh.pantallaprincipal.EnvioActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="¡Envío realizado correctamente!"
        android:textSize="35sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Información enviada:"
        android:textStyle="bold"
        android:textSize="25sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/vtNombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_gravity="right"/>

        <TextView
            android:id="@+id/vtApellido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_marginLeft="2dp"
            android:layout_gravity="left"/>
    </LinearLayout>


    <TextView
        android:id="@+id/vtEdad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:textSize="20sp"
        android:layout_gravity="center"
        />

    <TextView
        android:id="@+id/vtEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:textSize="20sp"
        android:layout_gravity="center"
        />

    <TextView
        android:id="@+id/vtCarrera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:textSize="20sp"
        android:layout_gravity="center"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Desea recibir información sobre: "
        android:textStyle="bold"
        android:textSize="25sp" 
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        >

        <CheckBox
            android:id="@+id/chkTorneos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Torneos"
            android:textSize="20sp"/>

        <CheckBox
            android:id="@+id/chkMeetups"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Meetups"
            android:textSize="20sp"/>

        <CheckBox
            android:id="@+id/chkAsados"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Asados"
            android:textSize="20sp"/>
    </LinearLayout>

</LinearLayout>
